{
    "name": "ixocreate/validation-package",
    "description": "IXOCREATE Validation Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ixocreate/application": "~0.1.0|~0.2.0",
        "ixocreate/validation": "^0.2"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "dev-develop"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Test\\Validation\\": "tests/src/",
            "Ixocreate\\Misc\\Validation\\": "tests/misc/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
